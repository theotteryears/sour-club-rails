<div id="<%= dom_id(beer) %>" class="relative bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
  <%= link_to edit_beer_path(beer), class: "absolute top-2 left-2 bg-blue-600 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-blue-700 transition", title: "Edit beer" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M16.5 4.5a2.121 2.121 0 113 3L7 20.5H4v-3L16.5 4.5z" />
    </svg>
  <% end %>

  <div class="mb-4 rounded-lg w-full h-64 overflow-hidden">
  <% if beer.image.attached? %>
    <%= image_tag beer.image, alt: "#{beer.name} image", class: "w-full h-full object-cover" %>
  <% end %>
</div>

  <h2 class="text-2xl font-bold mb-2 text-gray-800"><%= beer.name %></h2>
  <p class="text-gray-600 mb-1"><span class="font-semibold">Brewery:</span> <%= beer.brewery %></p>
  <p class="text-gray-600 mb-1"><span class="font-semibold">Sourness:</span> <%= beer.sourness %> / 10</p>
  <p class="text-gray-600 mb-1"><span class="font-semibold">Design:</span> <%= beer.design %> / 10</p>
  <p class="text-pink-600 font-semibold mt-2"><%= beer.jenesaisquoi %></p>

  <%= button_to beer_path(beer),
                method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "absolute top-2 right-2 bg-red-600 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-red-700 transition",
                title: "Delete beer" do %>
    X
  <% end %>
</div>